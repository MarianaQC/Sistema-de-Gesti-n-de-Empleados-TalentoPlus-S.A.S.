# --- DATABASE CONFIGURATION (MySQL) ---
MYSQL_ROOT_PASSWORD=<TU_CONTRASEÑA_ROOT_MYSQL>
MYSQL_DATABASE=talento_plus
MYSQL_USER=talento_user
MYSQL_PASSWORD=<TU_CONTRASEÑA_DE_USUARIO_DB>

# --- C# API CONNECTION STRING (Reads from the .env) ---
# Server=mysql_db apunta al servicio MySQL dentro de la red Docker.
ConnectionStrings__DefaultConnection=Server=mysql_db;Port=3306;Database=talento_plus;Uid=talento_user;Pwd=<TU_CONTRASEÑA_DE_USUARIO_DB>;

# --- JWT AND SECURITY SECRETS ---
JWT_SECRET=<TU_CLAVE_SECRETA_JWT_DE_MAS_DE_32_CARACTERES> 
JWT_ISSUER=TalentoPlus
JWT_AUDIENCE=TalentoPlus

# --- GEMINI AI KEY ---
GEMINI_API_KEY=<TU_CLAVE_DE_API_DE_GEMINI>

# --- SMTP EMAIL SERVICE ---
SMTP_HOST=<TU_HOST_SMTP>
SMTP_PORT=587
SMTP_USER=<TU_USUARIO_SMTP>
SMTP_PASSWORD=<TU_CONTRASEÑA_SMTP>
SMTP_FROM=<no-reply@talentoplus.com>
